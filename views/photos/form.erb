<form class="" action="/photos/<%= @photo.id %>" method="POST">
  <div class="">
    <label>Title</label>
    <input type="text" name="title" placeholder="Title of the photo" value="<%= @photo.title %>">
  </div>
  <br>
  <div class="">
    <label>Description</label>
    <textarea name="body" placeholder="Description of the photo"><%= @photo.body %></textarea>
  </div>

  <div class="">
    <label>Image</label>
    <textarea name="image" placeholder="Paste your image source"><%= @photo.image %></textarea>
  </div>

  <br>
  <div class="">
    <input type="submit" name="" value="Save Photo to Gallery">
  </div>

  <% if (@photo.id) %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>


</form>
